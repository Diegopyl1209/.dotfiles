[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[url "ssh://git@gist.github.com/"]
	insteadOf = https://gist.github.com/
[url "ssh://git@gitlab.com/"]
	insteadOf = https://gitlab.com/
[init]
	defaultBranch = main
[user]
	email = diegopyl1209@gmail.com
	name = Diego Peña y Lillo
	signingkey = ~/.ssh/id_rsa.pub
[gpg]
	format = ssh
[commit]
	gpgsign = true
[core]
	editor = nvim
	pager = delta
[interactive]
	diffFilter = delta --color-only
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default

# git-delta diff viewer config
[delta]
	syntax-theme = zenburn
	side-by-side = true
	navigate = true
        features = unobtrusive-line-numbers decorations
        true-color = never

[delta "unobtrusive-line-numbers"]
	line-numbers = true
	line-numbers-left-format = "{nm:>4}│"
	line-numbers-right-format = "{np:>4}│"
	line-numbers-left-style = grey
	line-numbers-right-style = grey

[delta "decorations"]
	commit-decoration-style = bold grey box ul
	file-style = bold blue
	file-decoration-style = ul
	hunk-header-decoration-style = box
[color]
	ui = auto
[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
